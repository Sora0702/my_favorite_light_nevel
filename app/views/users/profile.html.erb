<% provide :title, "プロフィール詳細" %>
<div class="container profile-box">
  <h3 class= "mt-4">プロフィール</h3>
  <div class="Profile-header mt-4">
    <div class="Profile-image">
      <%= render "shared/image", image_size: "75x75", user: current_user %>
      <p class="Profile-name text-center mt-1"><%= current_user.name %></p>
    </div>
    <div class="Edit-information">
      <%= link_to "アカウント情報を編集", :edit_user_registration, class: "btn btn-outline-dark" %>
      <%= link_to "プロフィールを編集", :profile_edit, class: "btn btn-outline-dark"%>
    </div>
  </div>
  <div class="Profile-information">
    <p class="Profile-introduction"><%= current_user.introduction %></p>
  </div>
</div>
<%= render "shared/books_index", books: @books %>
