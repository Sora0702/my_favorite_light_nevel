<% provide :title, "登録済みweb小説一覧" %>
<div class="container">
  <h3 class="mt-4">登録済みweb小説一覧</h1>
  <div class="search-box mt-4">
    <%= form_with url: narous_path, method: :get, local: true do |f|%>
      <div class="input-group">
        <%= f.text_field :keyword, placeholder: "小説のタイトルまたは著者を入力してください", class: "form-control", id: "narou-keyword" %>
        <span class="input-group-btn">
          <%= f.submit '検索', name: nil, class: "form-control" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/narous_index",  narous: @narous %>
