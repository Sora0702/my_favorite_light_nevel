<div class="d-flex align-items-center h-auto">
  <div class="form-signin w-100 m-auto text-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="72" height="57" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
      <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
    </svg>
    <h1 class="h3 mb-3 fw-normal mt-4">新規登録</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mt-2">
        <%= f.label "ユーザー名", class: "Requiredform" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", id: "new-user-name" %>
      </div>
      <%= render "shared/error", obj:resource, atr: :name %>
      <div class="mt-2">
        <%= f.label "メールアドレス", class: "Requiredform"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "new-email" %>
      </div>
      <%= render "shared/error", obj:resource, atr: :email %>
      <div class="mt-2">
        <%= f.label "パスワード", class: "Requiredform"  %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "new-password" %>
      </div>
      <%= render "shared/error", obj:resource, atr: :password %>
      <div class="mt-2">
        <%= f.label "確認用パスワード", class: "Requiredform"  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "confirm-password" %>
      </div>
      <%= render "shared/error", obj:resource, atr: :password_confirmation %>
      <div>
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control", id: "new-introduction" %>
      </div>
      <%= render "shared/error", obj:resource, atr: :introduction %>
      <div class="mt-2">
        <%= f.submit "新規登録", class: "btn btn-primary mt-1 w-100 new-user-registration" %>
        <%= link_to "アカウントをお持ちの方はこちら", :new_user_session, class: "btn btn-secondary mt-1 w-100" %>
      </div>
    <% end %>
  </div>
</div>
