<% provide :title, "登録済み小説一覧" %>
<div class="container">
  <h3 class="mt-4">登録済み小説一覧</h1>
  <div class="search-box mt-4">
    <%= form_with url: books_path, method: :get, local: true do |f|%>
      <div class="input-group">
        <%= f.text_field :keyword, placeholder: "小説のタイトルまたは著者を入力してください", class: "form-control", id: "keyword" %>
        <span class="input-group-btn">
          <%= f.submit '検索', name: nil, class: "form-control" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<div class="album py-5">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-4 mt-4 book-box">
          <div class="card mb-2 shadow-sm h-100">
            <%= image_tag book.image_url, class: "card-img-top", alt: "小説イメージ" %>
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text"><%= book.author %></p>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "レビューする", book %></button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
